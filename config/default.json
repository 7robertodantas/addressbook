{
  "port": 3000,
  "jwt": {
    "secretOrPrivateKey": "secret",
    "options": {
      "verify": {
        "algorithms": ["HS256"],
        "issuer": "addressbook-api",
        "maxAge": "1h"
      },
      "sign": {
        "algorithm": "HS256",
        "issuer": "addressbook-api",
        "expiresIn": "1h"
      }
    }
  },
  "bcrypt": {
    "saltRounds": 10
  },
  "mongodb": {
    "uri": "mongodb://localhost:27017/addressbook",
    "database": "addressbook",
    "options": {
      "useNewUrlParser": true,
      "poolSize": 10
    }
  }
}